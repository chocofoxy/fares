{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
    <h1>Games</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>GameId</th>
                <td>{{ game.gameId }}</td>
            </tr>
            <tr>
                <th>GameName</th>
                <td>{{ game.gameName }}</td>
            </tr>
            <tr>
                <th>GameCover</th>
                <td>{% if game.gameCover %} <img src="{{  asset(game.gameCover,'uploads')  }}" /> {% endif %} </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('games_index') }}">back to list</a>

    <a href="{{ path('games_edit', {'gameId': game.gameId}) }}">edit</a>

    {{ include('games/_delete_form.html.twig') }}
{% endblock %}
